<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.projectVertifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/input_type_left"
            android:textSize="@dimen/sp_16"
            android:text="是否火点" />


        <com.suke.widget.SwitchButton
            android:layout_weight="1"
            android:id="@+id/switch_button"
            style="@style/swithch_type"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="核查信息："
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/edt_multext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:padding="@dimen/dp_5"
            android:minLines="5"
            android:gravity="top"
            android:background="@drawable/order_edt_note_bg"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_14"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/imgs_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/btn_upload"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_margin="10dp"
            android:layout_weight="9"
            android:background="#D9D9D9"
            android:text="确定"
            android:textSize="@dimen/dp_20"
            android:textAlignment="center"/>

    </LinearLayout>



</LinearLayout>