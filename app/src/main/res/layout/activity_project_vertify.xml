<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.projectVertifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            style="@style/input_type_left"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center"
            android:text="是否火点" />

        <Switch
            android:id="@+id/switch_button"
            android:layout_gravity="center"
            android:paddingLeft="60dp"
            android:switchMinWidth="10dp"
            android:checked="true"
            android:showText="true"
            android:textOn="是"
            android:textOff="否"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            style="@style/input_type_left"
            android:text="核查人"
            android:textSize="@dimen/sp_16"/>
        <EditText
            android:id="@+id/confirmor"
            style="@style/input_type_right"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:text="核查信息："
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/edt_multext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:padding="@dimen/dp_5"
            android:minLines="5"
            android:gravity="top"
            android:background="@drawable/order_edt_note_bg"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_14"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/imgs_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/btn_upload"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_margin="10dp"
            android:layout_weight="9"
            android:background="#D9D9D9"
            android:text="上报"
            android:textSize="@dimen/dp_20"
            android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>